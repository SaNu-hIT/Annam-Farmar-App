<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/header_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="top|center"

                        android:background="@drawable/machinebackgroundgreen"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/booking_staus_machine_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:clickable="true"
                            android:layout_gravity="center"


                            android:scaleType="centerCrop"
                            android:src="@drawable/b01tractor" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center" android:layout_weight="1"
                        android:layout_height="match_parent">


                        <Button
                            android:id="@+id/status_cancel_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rect_oval_green"
                            android:text="Cancel"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            />

                    </LinearLayout>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="vertical"
                    android:padding="3dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/mlfb_MachineIcon"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:padding="4dp"

                                android:src="@drawable/machine" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left">

                            <com.sft.annam.customfonts.MyTextViewBold
                                android:id="@+id/booking_staus_machine_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="left"
                                android:padding="2dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:text="Tractor Ridge Plaster"
                                android:textSize="18sp" />

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"

                        >




                        <com.sft.annam.customfonts.MyTextView
                            android:id="@+id/booking_staus_owner_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="2dp"
                            android:text="Owner Name"
                            android:textSize="14sp" />

                        <com.sft.annam.customfonts.MyTextView
                            android:id="@+id/booking_staus_owner_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="2dp"
                            android:text="Owner Phone"
                            android:textSize="14sp" />

                        <com.sft.annam.customfonts.MyTextView
                            android:id="@+id/booking_staus_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"

                            android:padding="2dp"
                            android:text=" Ernakulam , Kerala 686673. "
                            android:textSize="14sp" />




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_margin="10dp"
                        android:gravity="center|bottom">



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal" android:layout_weight="1"
                            android:layout_height="match_parent">


                            <com.sft.annam.customfonts.MyTextView
                                android:id="@+id/booking_staus_arrival_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:background="@drawable/roundrectangleleft"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="center"

                                android:minHeight="5dp"


                                android:padding="5dp"     android:text="$2000 Rate/Day"
                                android:textColor="@color/white"

                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_weight="1"    android:layout_height="match_parent">

                            <com.sft.annam.customfonts.MyTextView
                                android:id="@+id/booking_staus_arrival_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:background="@drawable/roundedrectangleright"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="center"
                                android:padding="5dp"
                                android:minHeight="5dp"

                                android:text="$2000 Rate/Hour"
                                android:textColor="@color/white"

                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right">


                            <ImageButton

                                android:id="@+id/mlfb_ButtonDown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:fontFamily="sans-serif-condensed"
                                android:src="@drawable/plus"
                                android:text="More"
                                android:visibility="gone"

                                />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center" android:layout_weight="1"
                        android:layout_height="match_parent">


                        <com.sft.annam.customfonts.MyTextView
                            android:id="@+id/booking_status_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/roundrectangleleft" android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:padding="5dp"
                            android:minHeight="5dp"

                            android:text="$2000 Rate/Hour"
                            android:textColor="@color/white"

                            android:textSize="12sp"  />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal" android:layout_weight="1"
                        android:layout_height="match_parent">


                        <com.sft.annam.customfonts.MyTextView
                            android:id="@+id/booking_staus_booking_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/roundedrectangleright"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center"
                            android:padding="5dp"
                            android:minHeight="5dp"

                            android:text="$2000 Rate/Hour"
                            android:textColor="@color/white"

                            android:textSize="12sp"  />


                    </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            //end header


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >





            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>