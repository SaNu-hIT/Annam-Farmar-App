<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/book_a_service_bg"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/lkj"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking ID         :"
                            android:textStyle="bold"
                            android:id="@+id/myTextView1" />

                        <TextView
                            android:gravity="left"
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0000000"
                            android:id="@+id/booking_status_id" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location              :"
                            android:textStyle="bold"
                            android:id="@+id/myTextView2" />

                        <TextView
                            android:gravity="left"
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Location"
                            android:id="@+id/booking_staus_location" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Owner Name     :"
                            android:textStyle="bold"
                            android:id="@+id/myTextView3" />

                        <TextView
                            android:gravity="left"
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:id="@+id/booking_staus_owner_name" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Owner Phone    :"
                            android:textStyle="bold"
                            android:id="@+id/myTextView4" />

                        <TextView
                            android:gravity="left"
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:id="@+id/booking_staus_owner_phone" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Machine Name :"
                            android:textStyle="bold"
                            android:id="@+id/myTextView5" />

                        <TextView
                            android:gravity="left"
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mac Name"
                            android:id="@+id/booking_staus_machine_name" />

                    </LinearLayout>

                    <LinearLayout
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking Status :"
                            android:textStyle="bold"
                            android:id="@+id/myTextView6" />

                        <TextView
                            android:gravity="left"
                            android:textSize="15dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Waiting"
                            android:id="@+id/booking_staus_booking_status" />

                    </LinearLayout>
                    <LinearLayout
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/status_cancel_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:text="Cancel"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>